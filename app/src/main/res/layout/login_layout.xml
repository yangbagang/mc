<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/login_ll_bg"
        android:layout_width="410dp"
        android:layout_height="410dp"
        app:layout_heightPercent="27%"
        app:layout_widthPercent="45%"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/login_iv_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@mipmap/logo"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/login_tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/login_ll_bg"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="扫二维码登录管理操作"
        android:textColor="@android:color/black"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/login_tv_sn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_tv_hint"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="设备编号"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/scan_tv_back"
        android:background="@drawable/share_button_bg"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:layout_below="@id/login_tv_sn"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:text=" 关闭 "
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:onClick="closeWin"/>
</com.zhy.android.percent.support.PercentRelativeLayout>